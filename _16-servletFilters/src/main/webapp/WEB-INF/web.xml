<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>customer</servlet-name>
        <servlet-class>lk.ijse.api.CustomerServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>customer</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>item</servlet-name>
        <servlet-class>lk.ijse.api.ItemServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>item</servlet-name>
        <url-pattern>/item</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>order</servlet-name>
        <servlet-class>lk.ijse.api.OrderServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>order</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>default</filter-name>
        <filter-class>lk.ijse.api.filter.DefaultFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>default</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>one</filter-name>
        <filter-class>lk.ijse.api.filter.FilterOne</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>one</filter-name>
        <url-pattern>/customer</url-pattern>
        <url-pattern>/item</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>two</filter-name>
        <filter-class>lk.ijse.api.filter.FilterTwo</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>two</filter-name>
        <url-pattern>/customer</url-pattern>
        <url-pattern>/item</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>order</filter-name>
        <filter-class>lk.ijse.api.filter.OrderFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>order</filter-name>
        <url-pattern>/order</url-pattern>
    </filter-mapping>
</web-app>